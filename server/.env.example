# Server Configuration
HOST=0.0.0.0
PORT=1337

# Security Keys (Generate securely for production)
APP_KEYS=your_app_key1,your_app_key2,your_app_key3,your_app_key4
API_TOKEN_SALT=your_api_token_salt
ADMIN_JWT_SECRET=your_admin_jwt_secret
TRANSFER_TOKEN_SALT=your_transfer_token_salt
JWT_SECRET=your_jwt_secret

# Database Configuration (Example: SQLite or PostgreSQL)
DATABASE_CLIENT=sqlite
DATABASE_HOST=             # Required for non-SQLite (e.g., PostgreSQL, MySQL)
DATABASE_PORT=             # Required for non-SQLite
DATABASE_NAME=             # Required for non-SQLite
DATABASE_USERNAME=         # Required for non-SQLite
DATABASE_PASSWORD=         # Required for non-SQLite
DATABASE_SSL=false         # Set to true if using SSL connection
DATABASE_FILENAME=.tmp/data.db   # SQLite-specific path

# Strapi URL (Public-facing or local dev URL)
STRAPI_URL=http://localhost:1337

# File Upload Configuration
MAX_FILE_SIZE_MB=50   # Maximum allowed file size in MB (for uploads)
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

#Email
RESEND_API_KEY=your_resend_key